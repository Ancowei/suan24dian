<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/suan24dian_final_background"
    tools:context=".suan24dian_join_game" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/suan24dian_initiate_game"
        android:orientation="vertical"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <!-- title -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                   android:id="@+id/image_user"
                   android:layout_width="42dip"
                    android:layout_height="42dip"
                    android:layout_marginRight="10dip" />
                     />

                <TextView
                    android:id="@+id/tx_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/unLogin"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/suan24dian_chose_room" />

                <com.ancowei.listview.MyListView
                    android:id="@+id/join_game_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_joingame_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/suan24dian_back" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>